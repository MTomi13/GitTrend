<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">

        <!--had to increase the minSdk because of this-->
        <item name="colorControlNormal">@color/white</item>
        <item name="android:windowContentTransitions">true</item>

        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="ListItemNameBase">
        <item name="android:layout_width">@dimen/dimen_0</item>
        <item name="android:layout_height">@dimen/dimen_20</item>
        <item name="android:layout_marginEnd">@dimen/dimen_16</item>
        <item name="android:layout_marginStart">@dimen/dimen_12</item>
    </style>

    <style name="ListItemName" parent="ListItemNameBase">
        <item name="android:layout_marginTop">@dimen/dimen_4</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Body2</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="ListItemFullName" parent="ListItemNameBase">
        <item name="android:layout_marginBottom">@dimen/dimen_4</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Body2</item>
        <item name="android:textColor">@color/dark_grey</item>
    </style>

    <style name="ListItemUpdatedText">
        <item name="android:layout_width">@dimen/dimen_0</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">@dimen/dimen_8</item>
        <item name="android:layout_marginEnd">@dimen/dimen_16</item>
        <item name="android:layout_marginStart">@dimen/dimen_12</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Body1</item>
    </style>

    <style name="ListItemAvatar">
        <item name="android:layout_width">@dimen/dimen_48</item>
        <item name="android:layout_height">@dimen/dimen_48</item>
        <item name="android:layout_marginBottom">@dimen/dimen_8</item>
        <item name="android:layout_marginStart">@dimen/dimen_12</item>
        <item name="android:layout_marginTop">@dimen/dimen_12</item>
        <item name="android:padding">@dimen/dimen_4</item>
        <item name="android:transitionName">@string/shared_element_key</item>
    </style>

    <style name="ListItemCard" parent="CardView.Light">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/dimen_8</item>
        <item name="android:layout_marginEnd">@dimen/dimen_8</item>
        <item name="android:layout_marginTop">@dimen/dimen_8</item>
    </style>

    <style name="DetailsGitHubIcons">
        <item name="android:layout_width">@dimen/dimen_40</item>
        <item name="android:layout_height">@dimen/dimen_40</item>
        <item name="android:scaleType">centerCrop</item>
    </style>

    <style name="DetailsGitHubIconText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingBottom">@dimen/dimen_8</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Subhead</item>
    </style>

    <style name="DetailsTextBase">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingEnd">@dimen/dimen_16</item>
        <item name="android:paddingStart">@dimen/dimen_16</item>
    </style>

    <style name="DetailsLastUpdatedText" parent="DetailsTextBase">
        <item name="android:paddingBottom">@dimen/dimen_16</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Body1</item>
    </style>

    <style name="DetailsCreatedText" parent="DetailsTextBase">
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Body1</item>
    </style>

    <style name="DetailsDescriptionText" parent="DetailsTextBase">
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Body2</item>
        <item name="android:textColor">@color/dark_grey</item>
        <item name="android:singleLine">false</item>
        <item name="android:paddingBottom">@dimen/dimen_60</item>
    </style>

    <style name="DetailsLanguageText" parent="DetailsTextBase">
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Headline</item>
        <item name="android:paddingBottom">@dimen/dimen_8</item>
        <item name="android:paddingTop">@dimen/dimen_8</item>
    </style>

    <style name="DetailsAvatar">
        <item name="android:layout_width">@dimen/dimen_60</item>
        <item name="android:layout_height">@dimen/dimen_60</item>
        <item name="android:layout_margin">@dimen/dimen_40</item>
        <item name="android:paddingBottom">@dimen/dimen_8</item>
        <item name="android:paddingTop">@dimen/dimen_8</item>
        <item name="android:transitionName">@string/shared_element_key</item>
    </style>
</resources>
